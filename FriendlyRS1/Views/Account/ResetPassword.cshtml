@model FriendlyRS1.ViewModels.ResetPasswordVM
@{
    Layout = "_Layout";
}

<div class="container">
    <form asp-action="ResetPassword" method="post" class="border p-3 w-50 mx-auto shadow p-3 mb-5 bg-white rounded forgot-password">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <h4>Reset password</h4>
            <hr />
        </div>
        <input asp-for="Email " type="email" hidden />
        <input asp-for="Token" type="text" hidden />
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Confirm password</label>
            <input asp-for="ConfrimPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-info" value="Reset" />
    </form>
</div>