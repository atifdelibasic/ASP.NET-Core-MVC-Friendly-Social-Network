@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <title>@ViewData["Title"] Friendly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <title>@ViewBag.Title</title>
    <style>
        html {
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <a class="navbar-brand text-secondary" asp-controller="Home" asp-action="Index">Friendly Social Network</a>
                <i class="fas fa-globe fa-lg text-info"></i>
            </div>
            <div>
                <a asp-controller="Account" asp-action="Login" class="px-2">Log In</a>
                <a asp-controller="Account" asp-action="Register">Sign Up</a>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span class="text-info">&copy; 2020 - developers - </span> Mirza Kozica / Atif Delibašić
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")


    @RenderSection("Scripts", required: false)
</body>
</html>
