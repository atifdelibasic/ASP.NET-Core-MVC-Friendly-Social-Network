@model UserDetailsVM
@{
    Layout = null;
}

<div class="d-flex align-items-center">

    <i class="fas fa-phone-square-alt fa-lg text-info pr-2"></i><span class="text-info">CONTACT INFOMRATION</span>
</div>
<hr />
<div class="px-1">
    <div>
        <p class="m-0">Phone number</p>
        <small class="text-info">@(Model.PhoneNumber!= null?@Model.PhoneNumber:"No phone number") </small>
    </div>
    <hr />
    <div>
        <p class="m-0">Email</p>
        <small class="text-danger">@Model.Email</small>
    </div>
    <hr />

    @if (@TempData["edited"] != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <strong>@TempData["edited"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
   
</div>
